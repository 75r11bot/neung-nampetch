{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "./dist",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "typeRoots": ["./node_modules/@types", "./src/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  